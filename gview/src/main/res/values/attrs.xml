<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 刻度尺控件-->
    <attr name="borderColor" format="color" />
    <attr name="tickCount" format="integer" />
    <declare-styleable name="ScaleView">
        <attr name="scaleType">
            <!--温度计-->
            <enum name="temperature" value="0" />
            <!--电流计-->
            <enum name="galvanometer" value="1" />
        </attr>
        <!--边框颜色-->
        <attr name="borderColor" />
        <attr name="pillarDownColor" format="color" />
        <attr name="pillarUpColor" format="color" />
        <attr name="pillarWidth" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="tickCount" />
        <attr name="defaultValue" format="integer" />
        <attr name="defaultMaxValue" format="integer" />
        <attr name="defaultMinValue" format="integer" />
        <attr name="android:textSize" />
    </declare-styleable>

    <!--仪表盘-->
    <declare-styleable name="PanelView">
        <attr name="arcColor" format="color" />
        <attr name="arcUnColor" format="color" />
        <attr name="arcWidth" format="dimension" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="tickCount" />
        <attr name="tickColor" format="color" />
        <attr name="pointerColor" format="color" />
        <attr name="outerLineColor" format="color" />
        <attr name="innerLineColor" format="color" />
        <attr name="pointerType" format="enum">
            <enum name="line" value="1" />
            <enum name="pointer" value="2" />
        </attr>
        <attr name="lineSpace" format="integer" />
    </declare-styleable>

    <!--折叠view-->
    <declare-styleable name="FolderView">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="isTextVisible" format="boolean" />
        <attr name="arrowDownDrawable" format="reference" />
        <attr name="arrowUpDrawable" format="reference" />
        <attr name="controlledView" format="reference" />
        <attr name="tipFold" format="reference|string" />
        <attr name="tipUnfold" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="etv_MaxLinesOnShrink" format="reference|integer" />
        <attr name="etv_EllipsisHint" format="reference|string" /><!--default is ..-->
        <attr name="etv_ToExpandHint" format="reference|string" /><!--"to expand" hint string, default is "Expand"-->
        <attr name="etv_ToShrinkHint" format="reference|string" /><!--"to shrink" hint string, default is "Shrink"-->
        <attr name="etv_GapToExpandHint" format="reference|string" /><!--gap between "toExpandHint" and "trimmed text"-->
        <attr name="etv_GapToShrinkHint" format="reference|string" /><!--gap between "toShrinkHint" and "trimmed text"-->
        <attr name="etv_EnableToggle" format="reference|boolean" /><!--if toggle the state when click ExpandTextView-->
        <attr name="etv_IsShowExpandHint" format="reference|boolean" /><!--if show "toExpandHint"-->
        <attr name="etv_IsShowShrinkHint" format="reference|boolean" /><!--if show "toShrinkHint"-->
        <attr name="etv_ToExpandHintColor" format="reference|color" /><!--text color of "toExpandHint"-->
        <attr name="etv_ToShrinkHintColor" format="reference|color" /><!--text color of "toShrinkHint"-->
        <attr name="etv_ToExpandHintColorBgPressed" format="reference|color" /><!--background color if "toExpandHint" pressed-->
        <attr name="etv_ToShrinkHintColorBgPressed" format="reference|color" /><!--background color if "toShrinkHint" pressed-->
        <attr name="etv_InitState" format="enum"><!--init state, default is shrink-->
            <enum name="shrink" value="0" />
            <enum name="expand" value="1" />
        </attr>
    </declare-styleable>
    <!--签名控件-->
    <declare-styleable name="SignNameView">
        <attr name="lineWith" format="dimension" />
        <attr name="bgColor" format="color" />
        <attr name="lineColor" format="dimension" />
    </declare-styleable>

</resources>